<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/recycleViewItemProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_project_icon_husky" />

    <TextView
        android:id="@+id/recyclyViewItemUserMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rouned_rect_shape"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/recycleViewItemProfileImage"
        app:layout_constraintStart_toEndOf="@+id/recycleViewItemProfileImage"
        app:layout_constraintTop_toTopOf="@+id/recycleViewItemProfileImage"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/recyCleViewItemOtherUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rouned_rect_shape"
        android:text="text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recycleViewOtherUserProfileImage"
        app:layout_constraintEnd_toStartOf="@+id/recycleViewOtherUserProfileImage"
        app:layout_constraintTop_toTopOf="@+id/recycleViewOtherUserProfileImage"
        app:layout_constraintVertical_bias="0.347" />

    <ImageView
        android:id="@+id/recycleViewOtherUserProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:scaleX="-1"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/recycleViewItemProfileImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_project_icon_husky" />

</android.support.constraint.ConstraintLayout>