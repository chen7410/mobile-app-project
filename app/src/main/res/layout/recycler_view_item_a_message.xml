<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclyViewItemChatLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/recycleViewItemChatLeftLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/recycleViewItemProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_project_icon_husky" />

        <TextView
            android:id="@+id/recyclyViewItemUserMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:background="@drawable/rouned_rect_shape"
            android:text="TextView" />

        <TextView
            android:id="@+id/recyclyViewItemUserMessagesTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:text="TextView"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recycleViewItemChatRightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/recycleViewItemOtherUserMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recyCleViewItemOtherUserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"
            android:background="@drawable/rouned_rect_shape"
            android:text="text" />

        <ImageView
            android:id="@+id/recycleViewOtherUserProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:scaleX="-1"
            app:srcCompat="@drawable/ic_project_icon_husky" />

    </LinearLayout>


</LinearLayout>